---
import type { TabDetails } from '../types'

interface Props {
  tabs: TabDetails[]
}

const { pathname } = Astro.url
const { tabs } = Astro.props
---

<ul
  class="flex flex-wrap justify-center mb-10 text-base font-medium text-center text-gray-500 dark:text-gray-400 transition-colors">
  {
    tabs.map(({ title, href }) => (
      <li class="me-2">
        <a
          href={href}
          class={`inline-block px-4 py-3 ${pathname === href ? 'text-white bg-neutral-900 rounded-lg' : 'rounded-lg hover:text-gray-900 hover:bg-gray-100 dark:hover:bg-neutral-800 dark:hover:text-white'}`}
          aria-current={pathname === href ? 'page' : undefined}>
          {title}
        </a>
      </li>
    ))
  }
</ul>
