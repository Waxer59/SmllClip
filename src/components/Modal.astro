---
interface Props {
  open?: boolean
}

const { open } = Astro.props
---

<div
  id="modal"
  aria-hidden={!open}
  class={`${open ? '' : 'hidden'} w-full h-full absolute flex justify-center items-center right-0 top-0 z-10 bg-neutral-800/40 rounded-md shadow-lg`}>
  <div class="h-96 w-96 bg-neutral-800 rounded-md p-8">
    <slot />
  </div>
</div>

<script>
  const modal = document.getElementById('modal') as HTMLDialogElement

  document.addEventListener('mousedown', (e) => {
    if (e.target === modal) {
      modal.style.display = 'none'
      modal.setAttribute('aria-hidden', 'true')
    }
  })
</script>
