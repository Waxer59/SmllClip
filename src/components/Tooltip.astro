---
interface Props {
  text: string
}

const { text } = Astro.props
---

<div class="relative group flex justify-center">
  <span
    class="absolute -top-9 whitespace-nowrap opacity-0 group-hover:opacity-100 text-white transition-all bg-neutral-700 py-1 px-2 rounded select-none"
    >{text}</span
  >
  <slot />
</div>
