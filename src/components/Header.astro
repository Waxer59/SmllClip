---
import { Source } from 'astro:db'
import { Icon } from 'astro-icon/components'

interface Props {
  page?: typeof Source | null
}

const { page = null } = Astro.props
---

<header
  class="absolute flex items-center justify-between gap-4 top-3 right-4 text-sm p-4 z-10">
  <div class="flex flex-col">
    <input
      class="text-2xl font-semibold placeholder-white bg-transparent focus:outline-none"
      placeholder={page?.title?.toString() ?? 'Untitled'}
    />
    <input
      class="text-gray-300 bg-transparent focus:outline-none"
      placeholder={page?.description?.toString() ?? 'No description'}
    />
  </div>
  <div class="flex flex-col">
    <span class="flex items-center gap-2">
      <Icon name="mingcute:eye-line" />
      <p>{page?.views ?? 0} views</p>
    </span>
    <span class="flex items-center gap-2">
      <Icon name="mingcute:calendar-line" />
      <p>{page?.created_at ?? 'Today'}</p>
    </span>
  </div>
</header>
